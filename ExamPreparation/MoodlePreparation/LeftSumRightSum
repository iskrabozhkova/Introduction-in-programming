#include <iostream>

int analyseArr(int arr[], int n) {
	if (n < 2) {
		return -1;
	}
	for (int i = 1; i < n-1; i++) {
		int leftSum = 0;
		for (int j = 0; j <= i; j++) {
			leftSum += arr[j];
		}
		int rightSum = 0;
		for (int j = i + 1; j < n; j++) {
			rightSum += arr[j];
		}
		if (leftSum == rightSum) {
			return 1;
		}
	}
	return 0;
}

int main() {
	int n;
	int arr[30];
	std::cin >> n;

	for (int i = 0; i < n; i++) {
		std::cin >> arr[i];
	}
	std::cout << AnalyseArray(arr, n);

	return 0;
}
